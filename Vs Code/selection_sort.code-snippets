{
	"selection_sort": {
		"prefix": "selection_sort",
		"body": [
		  "void selection_sort(vll &a)",
		  "{",
		  "",
		  "  ll n = a.size();",
		  "  rep(i, 0, n - 2)",
		  "  {",
		  "    ll min_idx = i;",
		  "    rep(j, i + 1, n - 1) if (a[j] < a[min_idx]) min_idx = j;",
		  "",
		  "    swap(a[min_idx], a[i]);",
		  "  }",
		  "}"
		],
		"description": "selection_sort"
	  }
}